<% if object.errors.any? %>

  <div class="container">
    <div class="row center sign-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten">
          <span class="white-text left-align"><strong><%= pluralize(object.errors.count, "error") %></strong>
          prohibited your profile from being saved.
          <ul>
            <% @student.errors.full_messages.each do |m| %>
            <li><%= m %></li>
            <% end %>
          </ul></span>
        </div>
      </div>
    </div>
  </div>

<% end %>
